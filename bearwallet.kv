#:import ZBarCam zbarcam.ZBarCam
#:import ZBarSymbol pyzbar.pyzbar.ZBarSymbol
<Wallet>
    orientation: "vertical"
    Button:
        text: "signature"
        on_press: root.clear_widgets(); root.add_widget(app.build_signature_ui())
    Button:
        text: "add key"
        on_press: root.clear_widgets(); root.add_widget(app.build_key_ui())
    Button:
        text: "list keys"
        on_press: root.clear_widgets(); root.add_widget(app.build_keys_ui()); app.list_keys();
    Button
        text: "get key QRcode"
        on_press: root.clear_widgets(); root.add_widget(app.build_key_qrcode())
<Signature>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 1
        ZBarCam:
            id: zbarcam
            # optional, by default checks all types
            code_types: ZBarSymbol.QRCODE, ZBarSymbol.EAN13
            size: 500, 200
        Label:
            size: 500, 250
            text: ', '.join([str(symbol.data.decode('utf-8')) for symbol in zbarcam.symbols])
            on_text:
                zbarcam.stop()
                display.text = app.signature(''.join([str(symbol.data.decode('utf-8')) for symbol in zbarcam.symbols]))
            text_size: self.size
            padding: 20, 20
            multiline: True
            line_height: 1.1
            bold: True
            width: 150
            halign: 'left'
            valign: 'top'
            font_size: '16sp'
            color: 0, 0, 0, 1
            canvas.before:
                Color:
                    rgba: 1, 1, .8, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 1
        BoxLayout:
            orientation: 'vertical'
            Label:
                id: label1
                size_hint: 1, .5
                text_size: self.size
                text: "Output QR code: "
                bold: True
                width: 150
                halign: 'center'
                valign: 'middle'
                font_size: '18sp'
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                id: display
                size_hint: 1, 1
                text_size: self.size
                bold: True
                width: 150
                padding: 20, 20
                halign: 'left'
                valign: 'top'
                font_size: '18sp'
                on_text: qrcode.reload()
                canvas.before:
                    Color:
                        rgba: 1, 1, .8, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size
        Image:
            id: qrcode
            size: self.size
            nocache: True
            source: 'signature.png'
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.12
        Label:
            size_hint: 0.4, 1
            text: 'input key name: '
            bold: True
            halign: 'left'
            valign: 'middle'
            text_size: self.size
            padding: 10, 0
            font_size: '16sp'
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
        TextInput:
            id: keyName
            size_hint: 0.4, 1
            padding: 20, 10
            multiline: False
            font_size: '16sp'
            bold: True
            halign:'left'
            on_text_validate: print(self.text); app.keyName=self.text
        Label:
            size_hint: 0.4, 1
            text: 'input key password: '
            bold: True
            halign: 'left'
            valign: 'middle'
            text_size: self.size
            padding: 10, 0
            font_size: '16sp'
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
        TextInput:
            size_hint: 0.4, 1
            id: keyPassword
            padding: 20, 10
            multiline: False
            font_size: '16sp'
            bold: True
            halign:'left'
            on_text_validate: print(self.text); app.keyPassword=self.text
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.12
        Label:
            size_hint: 0.33, 1
            text: 'input chain id: '
            text_size: self.size
            padding: 10, 0
            bold: True
            halign: 'left'
            valign: 'middle'
            font_size: '16sp'
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
        TextInput:
            id: chainId
            padding: 20, 10
            multiline: False
            font_size: '16sp'
            bold: True
            halign:'left'
            on_text_validate: print(self.text); app.chainId=self.text
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.12
        Label:
            size_hint: 0.33, 1
            text: 'input account number: '
            bold: True
            halign: 'left'
            valign: 'middle'
            text_size: self.size
            padding: 10, 0
            font_size: '16sp'
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
        TextInput:
            id: accountNumber
            padding: 20, 10
            multiline: False
            font_size: '16sp'
            bold: True
            halign:'left'
            on_text_validate: print(self.text); app.accountNumber=self.text
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.12
        Label:
            size_hint: 0.33, 1
            text: 'input account sequence: '
            bold: True
            halign: 'left'
            valign: 'middle'
            text_size: self.size
            padding: 10, 0
            font_size: '16sp'
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
        TextInput:
            id: sequence
            padding: 20, 10
            multiline: False
            font_size: '16sp'
            bold: True
            halign:'left'
            on_text_validate: print(self.text); app.sequence=self.text
    BoxLayout:
        orientation: "horizontal"
        size_hint: 1, 0.1
        Button:
            size_hint: 1, 1
            text: "enter"
            text_size: self.size
            bold: True
            halign: 'center'
            valign: 'middle'
            font_size: '20sp'
            markup: True
            on_press: app.keyName=keyName.text; print(app.keyName); app.keyPassword=keyPassword.text; app.accountNumber=accountNumber.text; app.sequence=sequence.text; app.chainId=chainId.text
        Button:
            size_hint: 1, 1
            text: "home"
            text_size: self.size
            bold: True
            halign: 'center'
            valign: 'middle'
            font_size: '20sp'
            markup: True
            on_press: app.remove_qrcode(); root.clear_widgets(); root.add_widget(app.build_wallet_ui());

